
BASE = /usr/local/dx
GCC = gcc
LIBDXL=$(BASE)/lib_linux/libDXL.a

CFLAGS   = -O2 -Dlinux -DBASE=\"$(BASE)\" -I/usr/X11R6/include -I$(BASE)/include
 

LIBS = -L$(BASE)/lib_linux -L/usr/X11R6/lib -lm -ldl $(LIBDXL)
XLIBS   = -lXm -lXt -lXmu -lX11
OBJ =  stdsoap2.o soapC.o soapClient.o dxwebclient2.o
#build stdsoap2.c soapC.c soapClient.c from header using
#soapcpp2 -c dxweb1.h


all: dxwebclient2

#dxwebclient1 :  
#	$(GCC)  $(LIBS) -o dxwebclient2 $(CFLAGS)   stdsoap2.c soapC.c soapServer.c dxwebclient1.c


dxwebclient2 : $(OBJ)
	$(GCC)  $(OBJ)  $(LIBS) -o dxwebclient2

stdsoap2.o :  stdsoap2.c
	$(GCC) $(CFLAGS) -c -o $@ $<

SoapC.o :  SoapC.c
	$(GCC) $(CFLAGS) -c -o $@ $<

soapClient.o :  soapClient.c
	$(GCC) $(CFLAGS) -c -o $@ $<

dxwebclient2.o : dxwebclient2.c
	$(GCC) $(CFLAGS) -c -o $@ $<	
	
