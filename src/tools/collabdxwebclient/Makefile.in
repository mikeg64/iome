SHELL = /bin/sh
top_srcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

.SUFFIXES:
.SUFFIXES: .cpp .o

OPT=-g -O


CXX = @CXX@
CC = @CC@
CFLAGS = -I. @CFLAGS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
INSTALL = cp
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = $(exec_prefix)/bin
libdir = $(prefix)/lib
infodir = $(prefix)/info

DXBASE = @DXLIB@/dx
LIBDXL=$(DXBASE)/lib_linux/libDXL.a
XLIBS   = -lXm -lXt -lX11
EXTRACFLAGS =  -Dlinux -DBASE=\"$(DXBASE)\" -I$(XERCESCROOT)/include -I$(XALANCROOT)/src -I$(XALANCROOT) -I$(prefix)/include -DIO_XERCESCVERSION=@XERCESCVERSION@ -I/usr/X11R6/include
EXTRALIB	=	-lm -L$(XERCESCROOT)/lib -L$(XALANCROOT)/lib -lxerces-c -lxalan-c -L$(prefix)/lib  -L$(DXBASE)/lib_linux -L/usr/X11R6/lib -lm -ldl $(LIBDXL) $(XLIBS) $(libdir)/libioutils.a  $(libdir)/libiosimulation.a


IOSIMPATH = ../../iome/simulation
# ??? replace these with your own list of files
SOURCES=\
	dxwebclient4.cpp\
	$(IOSIMPATH)/stdsoap2.cpp\
	$(IOSIMPATH)/soapC.cpp\
	$(IOSIMPATH)/soapClient.cpp
#DOCS=PROG.texi PROG.info
#MISC=configure mkinstalldirs install-sh aclocal.m4
OBJS=\
	dxwebclient4.o\
	$(IOSIMPATH)/stdsoap2.o\
	$(IOSIMPATH)/soapC.o\
	$(IOSIMPATH)/soapClient.o

#LIB_OBJS=libf1.o libf2.o ...

# ??? replace with your targets
all: iocollabdxwsc

# ??? here I make the bindir, libdir and infodir directories; you
# might not need all of these.  also, I assumed the names PROG and
# libMYPROG.a for the program and library.
install: all
	mkdir -p $(bindir)
	mkdir -p $(libdir)
	mkdir -p $(infodir)
	$(INSTALL) iocollabdxwsc $(bindir)/iocollabdxwsc
#	$(INSTALL) iocollabdxwsc.info $(infodir)/iocollabdxwsc.info

uninstall:
	/bin/rm -f $(bindir)/iocollabdxwsc
#        /bin/rm -f $(infodir)/PROG.info



iocollabdxwsc: $(OBJS)
	$(CXX) $(CFLAGS) -o iocollabdxwsc $(OBJS) $(LIBS) $(EXTRALIB)


.cpp.o:
	$(CXX) $(CFLAGS) $(EXTRACFLAGS) -c $<

.c.o:
	$(CC) $(EXTRACFLAGS) $(CFLAGS) -c $<

clean:
	/bin/rm -f core *.o $(OBJS) $(LIB_OBJS)

distclean: clean
	/bin/rm -f Makefile config.h config.status config.cache config.log \
		marklib.dvi

mostlyclean: clean

maintainer-clean: clean

